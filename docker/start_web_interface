#!/usr/bin/env python
import BaseHTTPServer
import SocketServer
import sys
import os

PORT = int(sys.argv[1])
HOST_NAME = 'localhost'
__location__ = os.path.realpath(
    os.path.join(os.getcwd(), os.path.dirname(__file__)))

class InterfaceHandler(BaseHTTPServer.BaseHTTPRequestHandler):
    def do_HEAD(s):
         s.send_response(200)
         s.send_header("Content-type", "text/html")
         s.end_headers()
    def do_GET(s):
         """Respond to a GET with interface file"""
         index = open(os.path.join(__location__, 'interface.html'))
         s.send_response(200)
         s.send_header("Content-type", "text/html")
         s.end_headers()
         for line in index:
             s.wfile.write(line)

server_class = BaseHTTPServer.HTTPServer
httpd = server_class((HOST_NAME, PORT), InterfaceHandler)
try:
    httpd.serve_forever()
except KeyboardInterrupt:
    pass
httpd.server_close()
