<project name="UpstreamEditor" default="dist" basedir=".">
  <description>
    Build Upstream Editor Jar File
  </description>
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist" location="dist"/>
  <property name="resources" location="resources"/>
  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>
  <target name="compile" depends="init"
        description="compile src">
    <javac srcdir="${src}" destdir="${build}"/>
  </target>
  <target name="dist" depends="compile"
        description="generate dist directory">
    <mkdir dir="${dist}"/>
    <jar destfile="${dist}/UpstreamEditor_${DSTAMP}.jar">
      <fileset dir="${resources}"/>
      <fileset dir="${build}"/>
      <manifest>
        <attribute name="Main-Class" value="MapEditor"/>
      </manifest>
    </jar>
  </target>
  <target name="clean"
        description="clean">
    <delete dir="${build}"/>
  </target>
</project>
